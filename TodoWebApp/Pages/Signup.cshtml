@page "/signup"
@model TodoWebApp.Pages.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}

<style>
    .login-container-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 80px;
        min-height: 80vh;
        background-color: #f8f9fa;
    }

    .login-container {
        max-width: 400px;
        width: 95%;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid #e9ecef;
    }

    .login-header {
        text-align: center;
        margin-bottom: 1.5rem;
        font-size: 2rem;
        font-weight: 600;
        color: #343a40;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        display: block;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            outline: 0;
        }

    .btn-primary-custom {
        background-color: #28a745;
        border: none;
        color: white;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 6px;
        transition: background-color 0.2s ease;
        width: 100%;
    }

        .btn-primary-custom:hover {
            background-color: #218838;
        }

    .signup-link {
        color: #007bff;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .signup-link:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.85rem;
        color: #dc3545;
    }
</style>

<div class="login-container-wrapper">
    <div class="login-container">
        <h3 class="login-header">Create Account</h3>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Input.Username" class="form-label"></label>
                <input asp-for="Input.Username" class="form-control" autocomplete="username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mt-4 mb-3">
                <button type="submit" class="w-100 btn btn-primary-custom">Sign Up</button>
            </div>

            <div class="text-center mt-3">
                <p class="mb-0">
                    <a asp-page="/Login" class="signup-link">Already have an account? Log in</a>
                </p>
            </div>
        </form>
    </div>
</div>
@page "/login"
@inject HttpClient Http
@inject NavigationManager Nav
@rendermode InteractiveServer
@using Models

<h3>Login</h3>

<div>
    <input @bind="login.Username" placeholder="Username" />
    <input @bind="login.Password" placeholder="Password" type="password" />
    <button @onclick="HandleLogin">Login</button>
</div>

<p style="color:red">@errorMessage</p>

@code {
    private UserLogin login = new();
    private string errorMessage = "";

    private async Task HandleLogin()
    {
        var response = await Http.PostAsJsonAsync("https://localhost:7082/api/auth/login", login);
        if (response.IsSuccessStatusCode)
        {
            Nav.NavigateTo("/");
        }
        else
        {
            errorMessage = await response.Content.ReadAsStringAsync();
        }
    }
}
